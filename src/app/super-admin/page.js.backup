'use client';

import { useState, useEffect } from 'react';
import { useAuth } from '@/contexts/AuthContext';
import { collection, query, getDocs, doc, getDoc, addDoc, updateDoc, deleteDoc, where } from 'firebase/firestore';
import { db } from '@/lib/firebase';
import { useRouter } from 'next/navigation';

// Super Admin emails - ONLY these users can access super admin panel
const SUPER_ADMINS = [
  'donato@pronoia.com',
  'donato@pronoia.solutions'
  // Add more super admin emails here
];

export default function SuperAdminPage() {
  const { user } = useAuth();
  const router = useRouter();
  const [loading, setLoading] = useState(true);
  const [activeTab, setActiveTab] = useState('organizations');
  const [message, setMessage] = useState('');
  
  const [organizations, setOrganizations] = useState([]);
  const [allUsers, setAllUsers] = useState([]);
  const [selectedOrg, setSelectedOrg] = useState(null);

  useEffect(() => {
    if (!user) {
      router.push('/auth/signin');
      return;
    }
    
    // Check if user is super admin
    if (!SUPER_ADMINS.includes(user.email)) {
      setMessage('Access denied. Super admin privileges required.');
      setTimeout(() => router.push('/'), 2000);
      return;
    }
    
    loadSuperAdminData();
  }, [user]);

  const loadSuperAdminData = async () => {
    try {
      setLoading(true);
      await loadOrganizations();
      await loadAllUsers();
    } catch (error) {
      console.error('Error loading super admin data:', error);
      setMessage('Error loading data');
    } finally {
      setLoading(false);
    }
  };

  const loadOrganizations = async () => {
    const orgsSnapshot = await getDocs(collection(db, 'organizations'));
    const orgsList = orgsSnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
    setOrganizations(orgsList);
  };

  const loadAllUsers = async () => {
    const usersSnapshot = await getDocs(collection(db, 'users'));
    const usersList = usersSnapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
    setAllUsers(usersList);
  };

  const handleCreateOrganization = async (name, contactEmail) => {
    try {
      const orgData = {
        name,
        contactEmail,
        status: 'active',
        createdAt: new Date(),
        createdBy: user.uid,
        settings: {
          banner: {
            enabled: false,
            message: '',
            backgroundColor: '#0066cc',
            textColor: '#ffffff'
          }
        },
        subscription: {
          plan: 'professional',
          status: 'active',
          maxSites: 50,
          maxUsers: 10
        }
      };
      
      const orgRef = await addDoc(collection(db, 'organizations'), orgData);
      setMessage(`Organization "${name}" created successfully`);
      await loadOrganizations();
      return orgRef.id;
      
    } catch (error) {
      console.error('Error creating organization:', error);
      setMessage('Error creating organization');
    }
  };

  const handleInviteUserToOrg = async (email, organizationId, role) => {
    try {
      // Check if user already exists
      const existingUserQuery = query(collection(db, 'users'), where('email', '==', email));
      const existingUser = await getDocs(existingUserQuery);
      
      if (!existingUser.empty) {
        setMessage('User already exists. Update their organization instead.');
        return;
      }
      
      // Create invitation
      const invitation = {
        organizationId,
        email,
        role, // 'admin' or 'specialist'
        status: 'pending',
        invitedBy: user.uid,
        invitedAt: new Date(),
        expiresAt: new Date(Date.now() + 7 * 24 * 60 * 60 * 1000) // 7 days
      };
      
      await addDoc(collection(db, 'invitations'), invitation);
      setMessage(`Invitation sent to ${email}`);
      
    } catch (error) {
      console.error('Error inviting user:', error);
      setMessage('Error sending invitation');
    }
  };

  const handleUpdateUserOrg = async (userId, organizationId, role) => {
    try {
      await updateDoc(doc(db, 'users', userId), {
        organizationId,
        role,
        updatedAt: new Date()
      });
      
      setMessage('User organization updated');
      await loadAllUsers();
      
    } catch (error) {
      console.error('Error updating user:', error);
      setMessage('Error updating user');
    }
  };

  const handleDeleteOrganization = async (orgId) => {
    if (!confirm('Are you sure? This will remove the organization but not delete users.')) {
      return;
    }
    
    try {
      await updateDoc(doc(db, 'organizations', orgId), {
        status: 'deleted',
        deletedAt: new Date()
      });
      
      setMessage('Organization deleted');
      await loadOrganizations();
      
    } catch (error) {
      console.error('Error deleting organization:', error);
      setMessage('Error deleting organization');
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-red-600 mx-auto"></div>
          <p className="mt-4 text-gray-600">Loading super admin panel...</p>
        </div>
      </div>
    );
  }

  if (!user || !SUPER_ADMINS.includes(user.email)) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <div className="text-center">
          <h1 className="text-2xl font-bold text-red-600">Access Denied</h1>
          <p className="text-gray-600 mt-2">Super admin privileges required</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 py-8">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        {/* Header */}
        <div className="mb-8">
          <div className="flex items-center gap-3 mb-2">
            <span className="text-4xl">‚ö°</span>
            <h1 className="text-3xl font-bold text-gray-900">Super Admin Panel</h1>
          </div>
          <p className="text-gray-600">Pronoia Solutions - Master Control</p>
          <div className="mt-2 px-3 py-1 bg-red-100 border border-red-300 text-red-800 text-sm font-medium rounded inline-block">
            SUPER ADMIN ACCESS
          </div>
        </div>

        {/* Message */}
        {message && (
          <div className={`mb-6 p-4 rounded-lg ${
            message.includes('Error') || message.includes('denied')
              ? 'bg-red-50 border border-red-200 text-red-800' 
              : 'bg-green-50 border border-green-200 text-green-800'
          }`}>
            {message}
          </div>
        )}

        {/* Stats Cards */}
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div className="bg-white shadow rounded-lg p-6">
            <div className="text-sm text-gray-600 mb-1">Total Organizations</div>
            <div className="text-3xl font-bold text-gray-900">{organizations.length}</div>
          </div>
          <div className="bg-white shadow rounded-lg p-6">
            <div className="text-sm text-gray-600 mb-1">Total Users</div>
            <div className="text-3xl font-bold text-gray-900">{allUsers.length}</div>
          </div>
          <div className="bg-white shadow rounded-lg p-6">
            <div className="text-sm text-gray-600 mb-1">Active Organizations</div>
            <div className="text-3xl font-bold text-gray-900">
              {organizations.filter(o => o.status === 'active').length}
            </div>
          </div>
        </div>

        {/* Tabs */}
        <div className="bg-white shadow rounded-lg overflow-hidden">
          <div className="border-b border-gray-200">
            <nav className="flex -mb-px">
              <button
                onClick={() => setActiveTab('organizations')}
                className={`px-6 py-4 font-medium text-sm border-b-2 ${
                  activeTab === 'organizations'
                    ? 'border-red-600 text-red-600'
                    : 'border-transparent text-gray-600 hover:text-gray-900'
                }`}
              >
                üè¢ Organizations ({organizations.length})
              </button>
              <button
                onClick={() => setActiveTab('users')}
                className={`px-6 py-4 font-medium text-sm border-b-2 ${
                  activeTab === 'users'
                    ? 'border-red-600 text-red-600'
                    : 'border-transparent text-gray-600 hover:text-gray-900'
                }`}
              >
                üë• All Users ({allUsers.length})
              </button>
              <button
                onClick={() => setActiveTab('invite')}
                className={`px-6 py-4 font-medium text-sm border-b-2 ${
                  activeTab === 'invite'
                    ? 'border-red-600 text-red-600'
                    : 'border-transparent text-gray-600 hover:text-gray-900'
                }`}
              >
                ‚úâÔ∏è Invite User
              </button>
            </nav>
          </div>

          <div className="p-6">
            
            {/* Organizations Tab */}
            {activeTab === 'organizations' && (
              <OrganizationsTab
                organizations={organizations}
                onCreateOrg={handleCreateOrganization}
                onDeleteOrg={handleDeleteOrganization}
                onSelectOrg={setSelectedOrg}
              />
            )}

            {/* Users Tab */}
            {activeTab === 'users' && (
              <UsersTab
                users={allUsers}
                organizations={organizations}
                onUpdateUser={handleUpdateUserOrg}
              />
            )}

            {/* Invite Tab */}
            {activeTab === 'invite' && (
              <InviteTab
                organizations={organizations}
                onInvite={handleInviteUserToOrg}
              />
            )}

          </div>
        </div>

      </div>
    </div>
  );
}

// Organizations Tab
function OrganizationsTab({ organizations, onCreateOrg, onDeleteOrg, onSelectOrg }) {
  const [showCreate, setShowCreate] = useState(false);
  const [newOrgName, setNewOrgName] = useState('');
  const [newOrgEmail, setNewOrgEmail] = useState('');

  const handleCreate = () => {
    if (!newOrgName || !newOrgEmail) return;
    onCreateOrg(newOrgName, newOrgEmail);
    setNewOrgName('');
    setNewOrgEmail('');
    setShowCreate(false);
  };

  return (
    <div>
      <div className="flex justify-between items-center mb-6">
        <h2 className="text-xl font-bold text-gray-900">Organizations</h2>
        <button
          onClick={() => setShowCreate(!showCreate)}
          className="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium"
        >
          + Create Organization
        </button>
      </div>

      {/* Create Form */}
      {showCreate && (
        <div className="mb-6 p-4 bg-gray-50 rounded-lg border border-gray-300">
          <h3 className="font-bold text-gray-900 mb-4">Create New Organization</h3>
          <div className="space-y-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Organization Name</label>
              <input
                type="text"
                value={newOrgName}
                onChange={(e) => setNewOrgName(e.target.value)}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 bg-white"
                placeholder="Parallel Properties"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Contact Email</label>
              <input
                type="email"
                value={newOrgEmail}
                onChange={(e) => setNewOrgEmail(e.target.value)}
                className="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 bg-white"
                placeholder="admin@parallel.com"
              />
            </div>
            <div className="flex gap-2">
              <button
                onClick={handleCreate}
                className="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700"
              >
                Create
              </button>
              <button
                onClick={() => setShowCreate(false)}
                className="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300"
              >
                Cancel
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Organizations List */}
      <div className="space-y-4">
        {organizations.map(org => {
          const orgUsers = []; // Will be populated from users
          return (
            <div key={org.id} className="p-4 border border-gray-200 rounded-lg hover:border-red-300 transition">
              <div className="flex justify-between items-start">
                <div>
                  <h3 className="text-lg font-bold text-gray-900">{org.name}</h3>
                  <p className="text-sm text-gray-600">{org.contactEmail}</p>
                  <div className="mt-2 flex gap-2">
                    <span className={`px-2 py-1 text-xs font-medium rounded ${
                      org.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'
                    }`}>
                      {org.status}
                    </span>
                    <span className="px-2 py-1 text-xs bg-blue-100 text-blue-800 font-medium rounded">
                      {org.subscription?.plan || 'professional'}
                    </span>
                  </div>
                </div>
                <button
                  onClick={() => onDeleteOrg(org.id)}
                  className="px-3 py-1 text-red-600 hover:bg-red-50 rounded text-sm font-medium"
                >
                  Delete
                </button>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  );
}

// Users Tab
function UsersTab({ users, organizations, onUpdateUser }) {
  return (
    <div>
      <h2 className="text-xl font-bold text-gray-900 mb-6">All Users</h2>
      <div className="overflow-x-auto">
        <table className="min-w-full divide-y divide-gray-200">
          <thead className="bg-gray-50">
            <tr>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">User</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Email</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Organization</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Role</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Status</th>
              <th className="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody className="bg-white divide-y divide-gray-200">
            {users.map(user => {
              const org = organizations.find(o => o.id === user.organizationId);
              return (
                <tr key={user.id}>
                  <td className="px-6 py-4 whitespace-nowrap">
                    <div className="font-medium text-gray-900">{user.displayName || 'Unknown'}</div>
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-600">{user.email}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-600">{org?.name || 'No org'}</td>
                  <td className="px-6 py-4 whitespace-nowrap">
                    <select
                      value={user.role || 'specialist'}
                      onChange={(e) => onUpdateUser(user.id, user.organizationId, e.target.value)}
                      className="px-3 py-1 border border-gray-300 rounded text-sm text-gray-900 bg-white"
                    >
                      <option value="admin">Admin</option>
                      <option value="specialist">Specialist</option>
                    </select>
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap">
                    <span className={`px-2 py-1 text-xs font-medium rounded ${
                      user.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'
                    }`}>
                      {user.status || 'active'}
                    </span>
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm">
                    <select
                      value={user.organizationId || ''}
                      onChange={(e) => onUpdateUser(user.id, e.target.value, user.role)}
                      className="px-3 py-1 border border-gray-300 rounded text-sm text-gray-900 bg-white"
                    >
                      <option value="">No Organization</option>
                      {organizations.map(org => (
                        <option key={org.id} value={org.id}>{org.name}</option>
                      ))}
                    </select>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>
    </div>
  );
}

// Invite Tab
function InviteTab({ organizations, onInvite }) {
  const [email, setEmail] = useState('');
  const [organizationId, setOrganizationId] = useState('');
  const [role, setRole] = useState('specialist');

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!email || !organizationId) return;
    onInvite(email, organizationId, role);
    setEmail('');
    setOrganizationId('');
    setRole('specialist');
  };

  return (
    <div>
      <h2 className="text-xl font-bold text-gray-900 mb-6">Invite User to Organization</h2>
      <form onSubmit={handleSubmit} className="max-w-2xl space-y-6">
        <div>
          <label className="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
          <input
            type="email"
            value={email}
            onChange={(e) => setEmail(e.target.value)}
            className="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 bg-white"
            placeholder="user@example.com"
            required
          />
        </div>
        <div>
          <label className="block text-sm font-medium text-gray-700 mb-2">Organization</label>
          <select
            value={organizationId}
            onChange={(e) => setOrganizationId(e.target.value)}
            className="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 bg-white"
            required
          >
            <option value="">Select organization...</option>
            {organizations.map(org => (
              <option key={org.id} value={org.id}>{org.name}</option>
            ))}
          </select>
        </div>
        <div>
          <label className="block text-sm font-medium text-gray-700 mb-2">Role</label>
          <select
            value={role}
            onChange={(e) => setRole(e.target.value)}
            className="w-full px-4 py-2 border border-gray-300 rounded-lg text-gray-900 bg-white"
          >
            <option value="admin">Admin - Can manage users and settings</option>
            <option value="specialist">Specialist - Can work on sites</option>
          </select>
        </div>
        <button
          type="submit"
          className="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 font-medium"
        >
          Send Invitation
        </button>
      </form>

      <div className="mt-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <h3 className="font-bold text-blue-900 mb-2">‚ÑπÔ∏è Role Permissions</h3>
        <ul className="text-sm text-blue-800 space-y-1">
          <li>‚Ä¢ <strong>Admin:</strong> Can invite users, manage organization settings, and work on sites</li>
          <li>‚Ä¢ <strong>Specialist:</strong> Can create and manage sites, but cannot manage users</li>
        </ul>
      </div>
    </div>
  );
}
